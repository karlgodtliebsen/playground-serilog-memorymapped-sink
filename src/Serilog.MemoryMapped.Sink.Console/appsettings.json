{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "MemoryMapped": {
    "Name": "01K551358HE87EK7XPBT0SFTMM"
  },
  "DatabaseConnection_SqLite": {
    "ConnectionString": "/var/logs/logging.db"
  },
  "DatabaseConnection_MsSql": {
    "ConnectionString": "Server=.;Database=LoggingDemo;Persist Security Info=True;Encrypt=False;Trusted_Connection=True;Pooling=false;"
  },
  "DatabaseConnection_PostgreSql": {
    "ConnectionString": "<set using TestContainer>"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithSpan", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{TraceId}/{SpanId}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/logs/memory.mapped.console.app..log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 2,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{TraceId}/{SpanId}) {Message:lj}{NewLine}{Exception}",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Properties": {
      "Application": "Memory.Mapped.Console.App"
    }
  }
}